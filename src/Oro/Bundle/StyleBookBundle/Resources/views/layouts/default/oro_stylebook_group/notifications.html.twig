{% block _style_book_grid_element_notification_flash_widget %}
    <div class="notification-flash notification-flash--error" role="alert">
        <div class="notification-flash__content">
            {% import '@OroUI/layouts/renderIcon.html.twig' as renderIcon %}
            {{ renderIcon.icon({name: 'alert-circle', extraClass: 'notification-flash__icon'}) }}
            <div class="notification-flash__text">
                Google calendar cannot by synchronized, as Google integration is not yet configured. Please contact system administrator.
            </div>
        </div>
    </div>
{% endblock %}

{% block _style_book_grid_element_notification_flash_success_widget %}
    <div class="notification-flash notification-flash--success" role="alert">
        <div class="notification-flash__content">
            {% import '@OroUI/layouts/renderIcon.html.twig' as renderIcon %}
            {{ renderIcon.icon({name: 'check-circle', extraClass: 'notification-flash__icon'}) }}
            <div class="notification-flash__text">
                The shopping list 'PO1463' was successfully created.
            </div>
        </div>
    </div>
{% endblock %}

{% block _style_book_grid_element_notification_flash_warning_widget %}
