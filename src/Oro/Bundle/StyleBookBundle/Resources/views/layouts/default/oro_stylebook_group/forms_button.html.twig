    <button type="button" class="btn btn--destructive">Destructive</button>
    <button type="button" class="btn btn--destructive-outlined">Destructive Outlined</button>
    <button type="button" class="btn btn--destructive-plain">Destructive Text</button>
    <button type="button" class="btn btn--flat btn--destructive-flat">Destructive No paddings</button><br/><br/>
    <div class="style-book-group-element__item--dark">
        <div class="style-book-group-element__preview style-book-group-element__preview--inside-as-last">
            <button type="button" class="btn btn--inverse">Inversed</button>
