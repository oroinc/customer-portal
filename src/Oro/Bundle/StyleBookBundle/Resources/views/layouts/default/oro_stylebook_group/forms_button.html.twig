{% block _style_book_forms_description_widget %}
    <div class="content-section">
        <p class="content-section__text">{{ 'oro_stylebook.groups.grid.text_content'|trans }}</p>
        <p class="content-section__text">{{ 'oro_stylebook.groups.grid.text_content_first'|trans }}</p>
    </div>
{% endblock %}

{% block _style_book_button_element_types_widget %}
    {% import '@OroUI/layouts/renderIcon.html.twig' as renderIcon %}
    {% set button = 'button-'|uniqid %}
    <button type="button" class="btn">Primary</button>
    <div class="btn-group">
        <button type="button" class="btn">Split dropdown</button>
        <button type="button" id="{{ button }}" data-toggle="dropdown" class="btn dropdown-toggle"
                aria-haspopup="true" aria-expanded="false" aria-label="More actions">{% apply spaceless %}
            {{ renderIcon.icon({name: 'chevron-down'}) }}{% endapply %}</button>
        <ul class="dropdown-menu" role="menu" aria-labelledby="{{ button }}">
            <li><a class="dropdown-item" role="button" href="#">Action A</a></li>
            <li><a class="dropdown-item" role="button" href="#">Action B</a></li>
            <li><a class="dropdown-item" role="button" href="#">Action C</a></li>
        </ul>
    </div>

    <button type="button" class="btn">{% apply spaceless %}
        {{- renderIcon.icon({name: 'settings'}) -}}{% endapply %}</button>
{% endblock %}

{% block _style_book_button_element_variants_widget %}
    <button type="button" class="btn">Primary</button>
    <button type="button" class="btn btn--outlined">Outlined</button>
    <button type="button" class="btn btn--plain">Text</button>
    <button type="button" class="btn btn--flat">No paddings</button>
{% endblock %}

{% block _style_book_button_element_sizes_widget %}
