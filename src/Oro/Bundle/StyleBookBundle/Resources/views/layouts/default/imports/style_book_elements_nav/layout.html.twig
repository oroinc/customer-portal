{% block __style_book_elements_nav__container_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': ' style-book-menu-container',
        'data-page-component-viewport': {
            viewport: {
                minScreenType: 'desktop',
            },
            view: 'orostylebook/js/style-book/sticky-sidebar-view',
            excludeTarget: '.style-book-header',
            offsetTop: 26,
            offsetBottom: 26
        }
    }) %}

    <div {{ block('block_attributes') }}>
        {{ block_widget(block) }}
    </div>
{% endblock %}

