{% block group_tabs_widget %}
    {% set options = {
        useDropdown: true,
        verticalTabs: false,
        subtitle: false
    }|merge(options|default({})) %}

    {% set attr = layout_attr_defaults(attr, {
        '~class': ' tab-collection',
        'data-page-component-module': 'oroui/js/app/components/tabs-component',
        'data-page-component-options': options
    }) %}

    {% if tabs|length %}
        <div {{ block('block_attributes') }}>
            <ul class="nav nav-tabs nav-tabs-dropdown" role="tablist">
                {% set uniqueId = 'dropdown-'|uniqid %}

                {% for item in tabs %}
                    <li class="nav-item tab">
                        <a id="{{ item.anchor ~ uniqueId ~ '-tab' }}"
                           href="#{{ item.anchor ~ uniqueId }}"
                           class="nav-link {{ item.active ? ' active' : ''}}"
                           data-toggle="tab"
                           role="tab"
                           aria-selected="{{ item.active ? ' active' : 'false'}}"
                           aria-controls="{{ item.anchor ~ uniqueId }}"
                        >{{ item.label|trans|raw }}</a>
                    </li>
                {% endfor %}

                {% if options.useDropdown %}
                    <li class="nav-item dropdown" style="display: none">
                        <a href="#" id="tab-container-dropdown" class="nav-link dropdown-toggle" data-toggle="dropdown"
                           role="button" aria-haspopup="true" aria-expanded="false">
                            <span>{{ 'View more...'|trans }}</span> <span class="caret" aria-hidden="true"></span>
                        </a>
                        <ul class="dropdown-menu pull-right" role="menu" aria-labelledby="tab-container-dropdown"></ul>
                    </li>
                {% endif %}
            </ul>

            <div class="tab-content" id="tab-container">
                {% for item in tabs %}
                    <div id="{{ item.anchor ~ uniqueId }}"
                         class="tab-pane{{ item.active ? ' active' : '' }}"
                         role="tabpanel"
                         aria-labelledby="{{ item.anchor ~ uniqueId ~ '-tab' }}"
                    >
                        {{ block('_' ~ item.widget ~ '_widget') }}
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
{% endblock %}

