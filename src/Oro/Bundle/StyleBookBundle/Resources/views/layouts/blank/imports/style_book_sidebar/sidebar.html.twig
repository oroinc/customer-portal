{% block __style_book_sidebar__container_widget %}
    {% if block.count > 0 %}
        {% set attr = layout_attr_defaults(attr, {
            '~class': ' style-book-sidebar',
            'data-role': 'style-book-sidebar',
            'data-page-component-module': "oroui/js/app/components/viewport-component",
            '~data-page-component-options': {
                viewport: {
                    maxScreenType: 'tablet',
                },
                component: 'oroui/js/app/components/view-component',
                view: 'orostylebook/js/style-book/sticky-sidebar-view',
                excludeTarget: '.style-book-header'
            }
        }) %}

        <aside {{ block('block_attributes') }}>
            {{ block_widget(block) }}
        </aside>
    {% endif %}
{% endblock %}
