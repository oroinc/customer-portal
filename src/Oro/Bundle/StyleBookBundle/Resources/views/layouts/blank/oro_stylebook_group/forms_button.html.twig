{% block _style_book_forms_description_widget %}
    <div class="content-section">
        <p class="content-section__text">{{ 'oro_stylebook.groups.grid.text_content'|trans }}</p>
        <p class="content-section__text">{{ 'oro_stylebook.groups.grid.text_content_first'|trans }}</p>
    </div>
{% endblock %}

{% block _style_book_button_element_widget %}
    <button class="btn" type="button">An Ordinary Button</button>
{% endblock %}

{% block _style_book_button_element_group_widget %}
    <div class="btn-group">
        <a href="#" role="button" class="btn btn--info">Button with a drop-down</a>
        <a href="#" id="button-element-group-widget" data-toggle="dropdown" class="btn dropdown-toggle btn--info"
           role="button" aria-haspopup="true" aria-expanded="false" aria-label="More actions">
            <span class="caret" aria-hidden="true"></span>
        </a>
        <ul class="dropdown-menu" role="menu" aria-labelledby="button-element-group-widget">
            <li><a class="dropdown-item" role="button" href="#">Action A</a></li>
            <li><a class="dropdown-item" role="button" href="#">Action B</a></li>
            <li><a class="dropdown-item" role="button" href="#">Action C</a></li>
        </ul>
    </div>
{% endblock %}

{% block _style_book_button_element_inline_group_widget %}
<div class="btn-group">
    <button class="btn">
        <i class="fa-filter hide-text"></i>
    </button>
    <button class="btn">
        <i class="fa-repeat hide-text"></i>
    </button>
    <button class="btn">
        <i class="fa-refresh hide-text"></i>
    </button>
</div>
{% endblock %}

{% block _style_book_button_element_btn_group_widget %}
    <div class="btn-group" role="group">
        <button type="button" class="btn btn-default">Left</button>
        <button type="button" class="btn btn-default">Middle</button>
        <button type="button" class="btn btn-default">Right</button>
    </div>
{% endblock %}

{% block _style_book_button_element_btn_group_vertical_widget %}
    <div class="btn-group-vertical" role="group">
        <button type="button" class="btn btn-default">Top</button>
        <button type="button" class="btn btn-default">Middle</button>
        <button type="button" class="btn btn-default">Bottom</button>
    </div>
{% endblock %}
