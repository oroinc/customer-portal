{% block __datagrid_toolbar__datagrid_toolbar_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': ' datagrid-toolbar grid__toolbar--offset-s extended'
    }) %}
    <script type="text/html" id="template-datagrid-toolbar">
        <div{{ block('block_attributes') }}>{{ block_widget(block) }}</div>
    </script>
{% endblock %}

{% block __datagrid_toolbar__datagrid_toolbar_filter_container_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': ' frontend-datagrid__filter',
        'data-role': 'filter-container'
    }) %}

    {% set toolbarPosition = attr['data-grid-toolbar']|default('') %}
    {% if toolbarPosition != 'bottom' %}
        <div{{ block('block_attributes') }}>{{ block_widget(block) }}</div>
    {% endif %}

{% endblock %}

{% block __datagrid_toolbar__datagrid_toolbar_sorting_widget %}
    {% set attr = attr|merge({
        class: attr.class|default('') ~ " datagrid-tool form-horizontal",
        'data-grid-sorting': ''
    }) %}

    <div{{ block('block_attributes') }}></div>
{% endblock %}

{% block __datagrid_toolbar__datagrid_toolbar_leftside_container_widget %}
    <% if (toolbarPosition !== 'bottom') { %>
        <div class="datagrid-toolbar__side" data-section="left-side">
            {{ block_widget(block) }}
        </div>
    <% } %>
{% endblock %}

{% block __datagrid_toolbar__datagrid_toolbar_base_container_widget %}
    <div class="datagrid-toolbar__base" data-section="base-side">
        {{ block_widget(block) }}
    </div>
{% endblock %}

{% block __datagrid_toolbar__datagrid_toolbar_rightside_container_widget %}
    <% if (toolbarPosition !== 'bottom') { %>
        <div class="datagrid-toolbar__rightside" data-section="right-side">
            {{ block_widget(block) }}
        </div>
    <% } %>
{% endblock %}

