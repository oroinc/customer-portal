        {% set attr = attr|merge({class: attr.class|default('') ~ "datagrid-tool datagrid-tool--specific-action"}) %}
        <div{{ block('block_attributes') }}>
            {{ block_widget(block) }}
        </div>
    {% endif %}
{% endblock %}
