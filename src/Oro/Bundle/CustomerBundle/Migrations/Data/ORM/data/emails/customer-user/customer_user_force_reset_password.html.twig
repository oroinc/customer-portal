{% extends oro_get_email_template('base_storefront') %}

{% block content %}
    <h1 style="{{ styleH1 }}">Hello, {{ entity|oro_format_name }}!</h1>

    <!--empty space-->
    <table role="presentation" border="0" cellspacing="0" cellpadding="0">
        <tr>
            <td height="12" style="{{ styleEmptyRowH12 }}">&nbsp;</td>
        </tr>
    </table>

    <p style="{{ styleP }}">
        The administrator has requested a password reset for your user profile. Please use the Reset
        Password button below to visit a secure page where you can reset your password.
    </p>

    <!--empty space-->
    <table role="presentation" border="0" cellspacing="0" cellpadding="0">
        <tr>
            <td height="16" style="{{ styleEmptyRowH16 }}">&nbsp;</td>
        </tr>
    </table>

    <!--link-->
    <a style="{{ styleBtn }}" href="{{ oro_get_absolute_url('oro_customer_frontend_customer_user_password_reset', { token: entity.confirmationToken }) }}" target="_blank">
        <table class="btn" role="presentation" border="0" cellspacing="0" cellpadding="0" style="{{ styleBtnWrapper }}">
            <tr>
                <td valign="middle" style="{{ styleBtnPadding }}">
                    <span style="{{ styleBtnText }}">Reset Password</span>
                </td>
            </tr>
        </table>
    </a>
{% endblock %}
