{% extends '@OroUI/actions/index.html.twig' %}

{% import '@OroUI/macros.html.twig' as UI %}

{% set gridName = 'customer-customers-grid' %}
{% set pageTitle = 'oro.customer.customer.entity_plural_label'|trans %}

{% block navButtons %}
    {% import '@OroUI/macros.html.twig' as UI %}

    {% include '@OroImportExport/ImportExport/buttons_from_configuration.html.twig' with {
        'alias': 'oro_customer'
    } %}

    {% if is_granted('oro_customer_create') %}
        <div class="btn-group">
            {{ UI.addButton({
                'path': path('oro_customer_customer_create'),
                'entity_label': 'oro.customer.customer.entity_label'|trans
            }) }}
        </div>
    {% endif %}
{% endblock %}
