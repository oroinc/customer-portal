{% block _top_nav_controls_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': " grid-col-5 grid-col-mobile-landscape-12"
    }) %}

    <div {{ block('block_attributes') }}>
        <ul class="primary-menu">
            {{ block_widget(block) }}
        </ul>
    </div>
{% endblock %}

{% block _top_nav_logged_user_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': ' primary-menu__item primary-menu__item--offset-m'
    }) %}

    <li {{ block('block_attributes') }}>
        {% for child in block %}
            {{ block_widget(child) }}{% if not loop.last %} {% endif %}
        {% endfor %}
    </li>
{% endblock %}

