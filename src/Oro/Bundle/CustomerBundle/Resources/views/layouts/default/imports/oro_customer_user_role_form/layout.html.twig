{% block __oro_customer_user_role_form__customer_user_role_container_widget %}
    {% set attr = layout_attr_defaults(attr, {
        'data-focusable': true,
    }) %}
    <div{{ block('block_attributes') }}>
        {{ block_widget(block) }}
    </div>
{% endblock %}

{% block __oro_customer_user_role_form__customer_user_role_form_actions_top_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': ' grid-col-7 grid-place-self-end grid-col-mobile-landscape-12'
    }) %}
    <div{{ block('block_attributes') }}>
        {{ block_widget(block) }}
    </div>
{% endblock %}

{% block __oro_customer_user_role_form__customer_user_role_form_container_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': ' grid'
    }) %}
    <div{{ block('block_attributes') }}>
        {{ block_widget(block) }}
    </div>
{% endblock %}

{% block __oro_customer_user_role_form__customer_user_role_form_users_widget %}
    {% set grid_parameters = grid_parameters|merge({
        _parameters: {data_in: form.appendUsers.vars.value|split(',')|default([])}
    }) %}

    {% set attr = layout_attr_defaults(attr, {
        '~class': ' grid-col-12'
    }) %}

    <div{{ block('block_attributes') }}>
        {{ block_widget(block) }}
    </div>
{% endblock %}

{% block __oro_customer_user_role_form__customer_user_role_form_actions_bottom_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': ' grid-col-12 grid-place-self-end',
        'data-bottom-actions': ''
    }) %}
    <div{{ block('block_attributes') }}>
        {{ block_widget(block) }}
    </div>
{% endblock %}
