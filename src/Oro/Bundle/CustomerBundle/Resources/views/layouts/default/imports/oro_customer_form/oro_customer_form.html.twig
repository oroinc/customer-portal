{% block __oro_customer_form__page_widget %}
    {% set attr = layout_attr_defaults(attr, {
        'data-focusable': true
    }) %}
    <div {{ block('block_attributes') }}>
        {{ block_widget(block) }}
    </div>
{% endblock %}

{% block __oro_customer_form__label_wrapper_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': 'form-title-wrapper'
    }) %}
    <div{{ block('block_attributes') }}>{{ block_widget(block) }}</div>
{% endblock %}

{% block __oro_customer_form__label_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': ' form-title h2'
    }) %}
    <h1 {{ block('block_attributes') }}>{{ block_widget(block) }}</h1>
{% endblock %}

{% block __oro_customer_form__description_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': ' form-subtitle'
    }) %}

    <div {{ block('block_attributes') }}>
        <div>{{ block_widget(block)|oro_html_sanitize }}</div>
    </div>
{% endblock %}

{% block __oro_customer_form__form_start_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': ' grid'
    }) %}

    {{ parent_block_widget(block) }}
{% endblock %}

{% block __oro_customer_form__form_fields_widget %}
    {{ form_widget(form, {
        id: null,
        'attr': {
            'class': 'grid grid-col-12'
        }
    }) }}
{% endblock %}

{% block __oro_customer_form__form_submit_wrapper_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': ' grid-col-12 form-actions__wrapper'
    }) %}
    <div {{ block('block_attributes') }}>
        {{ block_widget(block) }}
    </div>
{% endblock %}

{% block __oro_customer_form__form_additional_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': ' grid-col-12 form-additional__container'
    }) %}
    <div {{ block('block_attributes') }}>
        {{ block_widget(block) }}
    </div>
{% endblock %}

{% block __oro_customer_form__links_widget %}
    {% set childs = [] %}
    {% for child in block %}
        {% if child.vars.visible %}
            {% set childs = childs|merge([child]) %}
        {% endif %}
    {% endfor %}
    <div class="form-links__container">
        {% for child in childs %}
            <div class="form-link__wrapper">
                {% set attr = layout_attr_defaults(child.vars.attr, {
                    '~class': ''
                }) %}
                {{ block_widget(child, {attr: attr}) }}
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block __oro_customer_form__required_label_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': ' required-label',
        'aria-hidden': 'true'
    }) %}

    <p {{ block('block_attributes') }}><span class="required-symbol" aria-hidden="true">*</span> {{ 'oro.customer.form.label.required'|trans }}</p>
{% endblock %}

{% block __oro_customer_form__all_required_label_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': 'all-required-label'
    }) %}
    {% if showAllRequiredLabel == 'true'  %}
        <p {{ block('block_attributes') }}>{{ 'oro.customer.form.label.all_required'|trans }}</p>
    {% endif %}
{% endblock %}


