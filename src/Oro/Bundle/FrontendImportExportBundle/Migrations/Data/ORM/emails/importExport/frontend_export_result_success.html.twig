{% extends oro_get_email_template('base_storefront') %}

{% block content %}
    <h1 style="{{ styleH1 }}">Hello, {{ exportResult.user }}</h1>

    <!--empty space-->
    <table role="presentation" border="0" cellspacing="0" cellpadding="0">
        <tr>
            <td height="12" style="{{ styleEmptyRowH12 }}">&nbsp;</td>
        </tr>
    </table>

    <p style="{{ styleP }}">
        Your {{ exportResult['entities'] }} data export has been finished.
    </p>

    <!--empty space-->
    <table role="presentation" border="0" cellspacing="0" cellpadding="0">
        <tr>
            <td height="16" style="{{ styleEmptyRowH16 }}">&nbsp;</td>
        </tr>
    </table>

    <!--link-->
    <a style="{{ styleBtn }}" href="{{ exportResult['url'] }}" target="_blank">
        <table class="btn" role="presentation" border="0" cellspacing="0" cellpadding="0" style="{{ styleBtnWrapper }}">
            <tr>
                <td valign="middle" style="padding: 8px 8px 8px 16px;">
                    <img style="display: inline-block; border: 0; line-height: 100%; outline: none; text-decoration: none; vertical-align: middle;" src="{{ system.websiteURL }}bundles/orofrontend/email-images/download.png" width="20" height="20">
                </td>
                <td valign="middle" style="padding: 8px 16px 8px 0;">
                    <span style="{{ styleBtnText }}">Download Results</span>
                </td>
            </tr>
        </table>
    </a>
{% endblock %}
