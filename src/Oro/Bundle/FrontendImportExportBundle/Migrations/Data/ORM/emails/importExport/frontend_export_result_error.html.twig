{% extends oro_get_email_template('base_storefront') %}

{% block content %}
    <h1 style="{{ styleH1 }}">Hello, {{ exportResult.user }}</h1>

    <!--empty space-->
    <table role="presentation" border="0" cellspacing="0" cellpadding="0">
        <tr>
            <td height="12" style="{{ styleEmptyRowH12 }}">&nbsp;</td>
        </tr>
    </table>

    <p style="{{ styleP }}">
        Something went wrong with your {{ exportResult['entities'] }} data export request. Please try again.
    </p>

    <!--empty space-->
    <table role="presentation" border="0" cellspacing="0" cellpadding="0">
        <tr>
            <td height="16" style="{{ styleEmptyRowH16 }}">&nbsp;</td>
        </tr>
    </table>

    <!--link-->
    <a style="{{ styleBtn }}" href="{{ exportResult['tryAgainUrl'] }}" target="_blank">
        <table class="btn" role="presentation" border="0" cellspacing="0" cellpadding="0" style="{{ styleBtnWrapper }}">
            <tr>
                <td valign="middle" style="{{ styleBtnPadding }}">
                    <span style="{{ styleBtnText }}">Try Again</span>
                </td>
            </tr>
        </table>
    </a>
{% endblock %}




